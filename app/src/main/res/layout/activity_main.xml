<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/moon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="心情："
        android:gravity="bottom"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/moon"
        android:layout_toEndOf="@id/moon_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/work_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moon"
        android:gravity="bottom"
        android:textSize="20sp"
        android:text="工作量：" />
    <EditText
        android:id="@+id/work"
        android:layout_below="@id/moon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/work_title"
        android:ems="10"
        android:inputType="textPersonName" />
    <Button
        android:id="@+id/cau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@drawable/buttontext"
        android:layout_below="@id/work"
        android:gravity="center"
        android:text="fuck it!" />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cau"
        android:gravity="center"
        android:textSize="100sp"
        android:text="00:00" />


</RelativeLayout>